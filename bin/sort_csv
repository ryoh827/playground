#!/bin/bash

# ä½¿ç”¨æ–¹æ³•ãƒã‚§ãƒƒã‚¯
if [ "$#" -ne 3 ]; then
  echo "Usage: $0 <csv_file> <column_number> <output_file>"
  exit 1
fi

# å…¥åŠ›å¼•æ•°ã®å–å¾—
csv_file=$1
column_number=$2
output_file=$3

# ã‚½ãƒ¼ãƒˆå‡¦ç†
# -t ',' ã§åŒºåˆ‡ã‚Šæ–‡å­—ã‚’ã‚«ãƒ³ãƒã«æŒ‡å®š
# -k ã§ã‚½ãƒ¼ãƒˆã™ã‚‹ã‚«ãƒ©ãƒ ç•ªå·ã‚’æŒ‡å®š
# ãƒ˜ãƒƒãƒ€ãƒ¼ã‚’ä¿æŒã—ã¦ã‚½ãƒ¼ãƒˆã™ã‚‹ãŸã‚ã« `head -n 1` ã¨ `tail -n +2` ã‚’åˆ©ç”¨
{
  head -n 1 "$csv_file"
  tail -n +2 "$csv_file" | sort -t ',' -k "$column_number" -n
} > "$output_file"

echo "Sorted CSV saved to $output_file ğŸ‰"

